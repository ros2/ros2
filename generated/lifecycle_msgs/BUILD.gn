# BUILD.gn for generated lifecycle_msgs

import("//gn_templates/ros2_library.gni")

_gen_base = "//generated/lifecycle_msgs"

config("lifecycle_msgs_public_config") {
  include_dirs = [ "//generated" ]
  defines = [ "ROSIDL_GENERATOR_C_BUILDING_DLL_lifecycle_msgs" ]
}

# C++ type support introspection + dispatch
source_set("lifecycle_msgs_type_support_cpp") {
  sources = [
    "${_gen_base}/msg/detail/state__type_support.cpp",
    "${_gen_base}/msg/detail/transition__type_support.cpp",
    "${_gen_base}/msg/detail/transition_description__type_support.cpp",
    "${_gen_base}/msg/detail/transition_event__type_support.cpp",
    "${_gen_base}/msg/state__type_support.cpp",
    "${_gen_base}/msg/transition__type_support.cpp",
    "${_gen_base}/msg/transition_description__type_support.cpp",
    "${_gen_base}/msg/transition_event__type_support.cpp",
    "${_gen_base}/srv/change_state__type_support.cpp",
    "${_gen_base}/srv/detail/change_state__type_support.cpp",
    "${_gen_base}/srv/detail/get_available_states__type_support.cpp",
    "${_gen_base}/srv/detail/get_available_transitions__type_support.cpp",
    "${_gen_base}/srv/detail/get_state__type_support.cpp",
    "${_gen_base}/srv/get_available_states__type_support.cpp",
    "${_gen_base}/srv/get_available_transitions__type_support.cpp",
    "${_gen_base}/srv/get_state__type_support.cpp",
    # C typesupport dispatch (separate from C++)
    "${_gen_base}/msg/state__type_support_c.cpp",
    "${_gen_base}/msg/transition__type_support_c.cpp",
    "${_gen_base}/msg/transition_description__type_support_c.cpp",
    "${_gen_base}/msg/transition_event__type_support_c.cpp",
    "${_gen_base}/srv/change_state__type_support_c.cpp",
    "${_gen_base}/srv/get_available_states__type_support_c.cpp",
    "${_gen_base}/srv/get_available_transitions__type_support_c.cpp",
    "${_gen_base}/srv/get_state__type_support_c.cpp",
  ]

  include_dirs = [ "//generated" ]

  deps = [
    "//src/ros2/rosidl/rosidl_runtime_cpp:rosidl_runtime_cpp",
    "//src/ros2/rosidl_typesupport/rosidl_typesupport_c:rosidl_typesupport_c",
    "//src/ros2/rosidl_typesupport/rosidl_typesupport_cpp:rosidl_typesupport_cpp",
    "//src/ros2/rosidl/rosidl_typesupport_introspection_cpp:rosidl_typesupport_introspection_cpp",
  ]

  cflags_cc = [ "-std=c++17", "-Wno-unused-parameter" ]
}

ros2_shared_library("lifecycle_msgs") {
  sources = [
    "${_gen_base}/msg/detail/state__functions.c",
    "${_gen_base}/msg/detail/transition__functions.c",
    "${_gen_base}/msg/detail/transition_description__functions.c",
    "${_gen_base}/msg/detail/transition_event__functions.c",
    "${_gen_base}/srv/detail/change_state__functions.c",
    "${_gen_base}/srv/detail/get_available_states__functions.c",
    "${_gen_base}/srv/detail/get_available_transitions__functions.c",
    "${_gen_base}/srv/detail/get_state__functions.c",
    "${_gen_base}/srv/change_state__type_support.c",  # Service event message functions
    "${_gen_base}/srv/get_available_states__type_support.c",
    "${_gen_base}/srv/get_available_transitions__type_support.c",
    "${_gen_base}/srv/get_state__type_support.c",
    "${_gen_base}/msg/detail/state__type_support.c",
    "${_gen_base}/msg/detail/transition__type_support.c",
    "${_gen_base}/msg/detail/transition_description__type_support.c",
    "${_gen_base}/msg/detail/transition_event__type_support.c",
    "${_gen_base}/srv/detail/change_state__type_support.c",
    "${_gen_base}/srv/detail/get_available_states__type_support.c",
    "${_gen_base}/srv/detail/get_available_transitions__type_support.c",
    "${_gen_base}/srv/detail/get_state__type_support.c",
    "${_gen_base}/msg/detail/type_description_stubs.c",
  ]

  public_configs = [ ":lifecycle_msgs_public_config" ]

  public_deps = [
    ":lifecycle_msgs_type_support_cpp",
    "//src/ros2/rosidl/rosidl_runtime_c:rosidl_runtime_c",
    "//src/ros2/rosidl/rosidl_typesupport_introspection_c:rosidl_typesupport_introspection_c",
    "//src/ros2/rcutils:rcutils",
  ]

  cflags = [ "-Wno-unused-parameter" ]
}
