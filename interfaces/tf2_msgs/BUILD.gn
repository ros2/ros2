# tf2_msgs - ROS2 TF2 transform message types

import("//build/ohos.gni")
import("//gn_templates/ros2_library.gni")

_package_name = "tf2_msgs"

# ============================================================================
# tf2_msgs message types:
#
# Core:
#   TFMessage - Collection of TransformStamped (used by /tf and /tf_static)
#   TF2Error - Error information for TF2 operations
#
# Services:
#   FrameGraph - Get frame graph as YAML string
#
# Actions:
#   LookupTransform - Asynchronous transform lookup
# ============================================================================

# ============================================================================
# tf2_msgs C generator library
# ============================================================================
ros2_shared_library("tf2_msgs__rosidl_generator_c") {
  sources = [
    # Message types
    "src/msg/t_f_message__functions.c",
    "src/msg/t_f2_error__functions.c",

    # Service types - Request/Response
    "src/srv/frame_graph__request__functions.c",
    "src/srv/frame_graph__response__functions.c",

    # Action types - Goal/Result/Feedback
    "src/action/lookup_transform__goal__functions.c",
    "src/action/lookup_transform__result__functions.c",
    "src/action/lookup_transform__feedback__functions.c",
  ]

  include_dirs = [ "include" ]

  deps = [
    "//foundation/rcutils:rcutils",
    "//foundation/rosidl/rosidl_runtime_c:rosidl_runtime_c",
    "//interfaces/builtin_interfaces:builtin_interfaces__rosidl_generator_c",
    "//interfaces/geometry_msgs:geometry_msgs__rosidl_generator_c",
  ]

  defines = [ "ROSIDL_GENERATOR_C_BUILDING_DLL_${_package_name}" ]

  part_name = "ros2_foundation"
  subsystem_name = "ros2"
}

# ============================================================================
# tf2_msgs type support C library
# ============================================================================
ros2_shared_library("tf2_msgs__rosidl_typesupport_c") {
  sources = [
    # Message types
    "src/msg/t_f_message__type_support.c",
    "src/msg/t_f2_error__type_support.c",

    # Service types - Request/Response
    "src/srv/frame_graph__request__type_support.c",
    "src/srv/frame_graph__response__type_support.c",

    # Action types - Goal/Result/Feedback
    "src/action/lookup_transform__goal__type_support.c",
    "src/action/lookup_transform__result__type_support.c",
    "src/action/lookup_transform__feedback__type_support.c",
  ]

  include_dirs = [ "include" ]

  deps = [
    ":tf2_msgs__rosidl_generator_c",
    "//foundation/rcutils:rcutils",
    "//foundation/rosidl/rosidl_runtime_c:rosidl_runtime_c",
    "//foundation/rosidl/rosidl_typesupport_c:rosidl_typesupport_c",
    "//foundation/rosidl/rosidl_typesupport_introspection_c:rosidl_typesupport_introspection_c",
    "//interfaces/builtin_interfaces:builtin_interfaces__rosidl_typesupport_c",
    "//interfaces/geometry_msgs:geometry_msgs__rosidl_typesupport_c",
  ]

  defines = [ "ROSIDL_TYPESUPPORT_C_BUILDING_DLL" ]

  part_name = "ros2_foundation"
  subsystem_name = "ros2"
}

# ============================================================================
# tf2_msgs FastRTPS type support
# ============================================================================
ros2_shared_library("tf2_msgs__rosidl_typesupport_fastrtps_c") {
  sources = [
    "src/msg/t_f_message__rosidl_typesupport_fastrtps_c.cpp",
    "src/msg/t_f2_error__rosidl_typesupport_fastrtps_c.cpp",
    "src/action/lookup_transform__goal__rosidl_typesupport_fastrtps_c.cpp",
    "src/action/lookup_transform__result__rosidl_typesupport_fastrtps_c.cpp",
  ]

  include_dirs = [ "include" ]

  deps = [
    ":tf2_msgs__rosidl_generator_c",
    "//foundation/rcutils:rcutils",
    "//foundation/rosidl/rosidl_runtime_c:rosidl_runtime_c",
    "//foundation/rosidl/rosidl_typesupport_fastrtps_c:rosidl_typesupport_fastrtps_c",
    "//vendor/fastdds/fastcdr:fastcdr",
    "//interfaces/builtin_interfaces:builtin_interfaces__rosidl_typesupport_fastrtps_c",
    "//interfaces/geometry_msgs:geometry_msgs__rosidl_typesupport_fastrtps_c",
  ]

  defines = [ "ROSIDL_TYPESUPPORT_FASTRTPS_C_BUILDING_DLL_${_package_name}" ]

  cflags_cc = [ "-Wno-unused-parameter" ]

  part_name = "ros2_foundation"
  subsystem_name = "ros2"
}

# ============================================================================
# tf2_msgs C++ type support
# ============================================================================
config("tf2_msgs_cpp_config") {
  include_dirs = [ "include" ]
}

ros2_shared_library("tf2_msgs__rosidl_typesupport_cpp") {
  sources = [
    "src/msg/t_f_message__type_support.cpp",
    "src/msg/t_f2_error__type_support.cpp",
    "src/srv/frame_graph__request__type_support.cpp",
    "src/srv/frame_graph__response__type_support.cpp",
    "src/action/lookup_transform__goal__type_support.cpp",
    "src/action/lookup_transform__result__type_support.cpp",
    "src/action/lookup_transform__feedback__type_support.cpp",
  ]

  include_dirs = [ "include" ]

  deps = [
    ":tf2_msgs__rosidl_generator_c",
    "//foundation/rosidl/rosidl_runtime_cpp:rosidl_runtime_cpp",
    "//foundation/rosidl/rosidl_typesupport_cpp:rosidl_typesupport_cpp",
    "//foundation/rosidl/rosidl_typesupport_introspection_cpp:rosidl_typesupport_introspection_cpp",
    "//interfaces/builtin_interfaces:builtin_interfaces__rosidl_typesupport_cpp",
    "//interfaces/geometry_msgs:geometry_msgs__rosidl_typesupport_cpp",
  ]

  defines = [ "ROSIDL_TYPESUPPORT_CPP_BUILDING_DLL" ]

  part_name = "ros2_foundation"
  subsystem_name = "ros2"
}

# ============================================================================
# Package group target
# ============================================================================
group("tf2_msgs") {
  public_deps = [
    ":tf2_msgs__rosidl_generator_c",
    ":tf2_msgs__rosidl_typesupport_c",
    ":tf2_msgs__rosidl_typesupport_cpp",
    ":tf2_msgs__rosidl_typesupport_fastrtps_c",
  ]

  public_configs = [ ":tf2_msgs_cpp_config" ]
}
