# BUILD.gn for generated builtin_interfaces

import("//gn_templates/ros2_library.gni")

_gen_base = "//generated/builtin_interfaces"

config("builtin_interfaces_public_config") {
  include_dirs = [ "//generated" ]
  defines = [ "ROSIDL_GENERATOR_C_BUILDING_DLL_builtin_interfaces" ]
}

# C++ type support introspection + dispatch
source_set("builtin_interfaces_type_support_cpp") {
  sources = [
    "${_gen_base}/msg/detail/duration__type_support.cpp",
    "${_gen_base}/msg/detail/time__type_support.cpp",
    "${_gen_base}/msg/duration__type_support.cpp",
    "${_gen_base}/msg/time__type_support.cpp",
    # C typesupport dispatch (separate from C++)
    "${_gen_base}/msg/duration__type_support_c.cpp",
    "${_gen_base}/msg/time__type_support_c.cpp",
  ]

  include_dirs = [ "//generated" ]

  deps = [
    "//src/ros2/rosidl/rosidl_runtime_cpp:rosidl_runtime_cpp",
    "//src/ros2/rosidl_typesupport/rosidl_typesupport_c:rosidl_typesupport_c",
    "//src/ros2/rosidl_typesupport/rosidl_typesupport_cpp:rosidl_typesupport_cpp",
    "//src/ros2/rosidl/rosidl_typesupport_introspection_cpp:rosidl_typesupport_introspection_cpp",
  ]

  cflags_cc = [ "-std=c++17", "-Wno-unused-parameter" ]
}

ros2_shared_library("builtin_interfaces") {
  sources = [
    "${_gen_base}/msg/detail/duration__functions.c",
    "${_gen_base}/msg/detail/time__functions.c",
    "${_gen_base}/msg/detail/duration__type_support.c",
    "${_gen_base}/msg/detail/time__type_support.c",
    "${_gen_base}/msg/detail/type_description_stubs.c",
  ]

  public_configs = [ ":builtin_interfaces_public_config" ]

  public_deps = [
    ":builtin_interfaces_type_support_cpp",
    "//src/ros2/rosidl/rosidl_runtime_c:rosidl_runtime_c",
    "//src/ros2/rosidl/rosidl_typesupport_introspection_c:rosidl_typesupport_introspection_c",
    "//src/ros2/rcutils:rcutils",
  ]

  cflags = [ "-Wno-unused-parameter" ]
}
