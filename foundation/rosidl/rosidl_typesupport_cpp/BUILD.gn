# rosidl_typesupport_cpp - ROS IDL type support for C++

import("//build/ohos.gni")
import("//gn_templates/ros2_library.gni")

# Source directory
_rosidl_typesupport_cpp_src = "//ros2/src/ros2/rosidl_typesupport/rosidl_typesupport_cpp"

# ============================================================================
# rosidl_typesupport_cpp shared library
# ============================================================================
ros2_shared_library("rosidl_typesupport_cpp") {
  sources = [
    "${_rosidl_typesupport_cpp_src}/src/identifier.cpp",
    "${_rosidl_typesupport_cpp_src}/src/message_type_support_dispatch.cpp",
    "${_rosidl_typesupport_cpp_src}/src/service_type_support_dispatch.cpp",
  ]

  include_dirs = [
    "${_rosidl_typesupport_cpp_src}/include",
  ]

  deps = [
    "//foundation/rcutils:rcutils",
    "//foundation/rcpputils:rcpputils",
    "//foundation/rosidl/rosidl_runtime_c:rosidl_runtime_c",
    "//foundation/rosidl/rosidl_runtime_cpp:rosidl_runtime_cpp",
    "//foundation/rosidl/rosidl_typesupport_interface:rosidl_typesupport_interface",
  ]

  defines = [
    "ROSIDL_TYPESUPPORT_CPP_BUILDING_DLL",
  ]

  libs = [ "dl" ]

  part_name = "ros2_foundation"
  subsystem_name = "ros2"
}
